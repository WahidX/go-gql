scalar Timestamp

type Todo {
	id: ID!
	text: String!
	done: Boolean!
	user: User!
	timestamp: Timestamp!
}

type User {
	id: ID!
	name: String!
	age: Int!
}

type Query {
	users: [User!]!
	userTodos(userId: ID): [Todo!]!
	todos: [Todo!]!
}

input NewTodo {
	text: String!
	userId: String!
}

input NewUser {
	name: String!
	age: Int!
}

type Mutation {
	createUser(input: NewUser!): User!
	createTodo(input: NewTodo!): Todo!
}

type Subscription {
	messageSent: String!
}
